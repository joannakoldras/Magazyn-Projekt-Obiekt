        <Button x:Name="UsunPrzycisk" Content="Usun" HorizontalAlignment="Left" Height="30" Margin="230,364,0,0" VerticalAlignment="Top" Width="94" Grid.Column="1"/>
        <Button x:Name="PokazPrzycisk" Content="Pokaz parametry ubran" HorizontalAlignment="Left" Height="30" Margin="591,364,0,0" VerticalAlignment="Top" Width="130" Grid.Column="1"/>
        <Button x:Name="OdswiezPrzycisk" Content="Odswiez" HorizontalAlignment="Left" Height="30" Margin="479,364,0,0" VerticalAlignment="Top" Width="94" Grid.Column="1"/>
    </Grid>
</Window>
